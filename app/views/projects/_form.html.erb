      <div class="col-lg-4">
        <% @project_picons.each do |p| %>
              <div style="margin-left:auto;margin-right:auto;text-align:center;">
                <%= image_tag p.picon_url, :style => 'max-width:90%;max-height:60px;padding:1%;' %>
              </div><br>
              
              
              <div style="margin-left:auto;margin-right:auto;text-align:center;">
