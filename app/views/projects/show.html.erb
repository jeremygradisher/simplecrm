  <dt><strong><%= model_class.human_attribute_name(:client_contact) %>:</strong></dt>
  <dd><%= @project.client_contact %></dd>
  <dt><strong><%= model_class.human_attribute_name(:client_meeting) %>:</strong></dt>
  <dd><%= @project.client_meeting %></dd>
  <dt><strong><%= model_class.human_attribute_name(:client_proposal) %>:</strong></dt>
